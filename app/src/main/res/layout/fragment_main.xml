<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/frame_layout_margin"
    android:orientation="vertical"
    tools:context="com.pascalhow.htmlparsingexampleapp.MainFragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/load_course_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin_vertical_small"
            android:text="@string/course_screen_load_button_text" />

        <TextView
            android:id="@+id/course_list_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/course_screen_course_list"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="@dimen/course_screen_content_text_size" />
    </LinearLayout>
</ScrollView>
